  <meta charset="UTF-8">
  <title>Member Login</title>
  <style>
    body {
      font-family: Arial;
      padding: 40px;
      background: #f7f7f7;
    }
    .box {
      width: 300px;
      margin: auto;
      background: white;
      padding: 20px;
      border-radius: 6px;
      box-shadow: 0 0 10px #ccc;
    }
    input {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
    }
    button {
      width: 100%;
      padding: 10px;
      background: #3366ff;
      color: white;
      border: none;
      cursor: pointer;
    }
    #error {
      color: red;
      margin-top: 10px;
    }
  </style>
</head>
<body>

<div class="box">
  <h2>Student Login</h2>

  <label>Admission Number</label>
  <input type="text" id="adm">

  <label>Name</label>
  <input type="text" id="name">

  <button onclick="login()">Login</button>

  <p id="error"></p>
</div>

<script>
  // List of approved students
  const students = [
    { adm: "DP251", name: "Hudson" },
    { adm: "DP252", name: "Mary" },
    { adm: "DP253", name: "Brian" }
  ];

  function login() {
    let adm = document.getElementById("adm").value.trim();
    let name = document.getElementById("name").value.trim().toLowerCase();

    let found = students.find(s =>
      s.adm === adm && s.name.toLowerCase() === name
    );

    if (found) {
      localStorage.setItem("student", JSON.stringify(found));
      window.location.href = "member-dashboard.html";
    } else {
      document.getElementById("error").textContent =
        "Invalid admission number or name.";
    }
  }
</script>

</body>
